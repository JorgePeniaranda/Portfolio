generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./sqlite.db"
}

model Project {
  id               Int           @id @default(autoincrement())
  key              String        @unique
  name             String
  description      String
  goals            String
  whatContribution String        @map("what_contribution")
  demoUrl          String        @map("demo_url")
  githubUrl        String        @map("github_url")
  collaborators    Colaborator[]
  stackId          Int           @map("stack_id")
  techStacks       Stack[]       @relation("ProjectStacks")
}

model Stack {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  iconUrl     String    @map("icon_url")
  projects    Project[] @relation("ProjectStacks")
}

model Colaborator {
  id               Int     @id @default(autoincrement())
  nickname         String  @unique
  githubUsername   String? @map("github_username")
  linkedinUsername String? @map("linkedin_username")
  projectId        Int     @map("project_id")
  project          Project @relation(fields: [projectId], references: [id])
}
