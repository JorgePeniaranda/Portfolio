{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["node_modules"],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/lng/layout.js",
    "app/lng/layout.js",
    "app/i18n/settings.js",
    "app/i18n/settings.js",
    "app/i18n/settings.js",
    "app/i18n/index.js",
    "app/i18n/index.js",
    "components/SwitchLenguage/index.js",
    "ni18n.config.ts",
    "dictionaries/index.js"
  ]
}
