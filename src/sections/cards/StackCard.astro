---
import HTML from "../../svg/logos/techs/HTML.astro";
import CSS from "../../svg/logos/techs/CSS.astro";
import Javascript from "../../svg/logos/techs/Javascript.astro";
import React from "../../svg/logos/techs/React.astro";
import Nextjs from "../../svg/logos/techs/Nextjs.astro";
import Typescript from "../../svg/logos/techs/Typescript.astro";
import Tailwind from "../../svg/logos/techs/Tailwind.astro";
import SASS from "../../svg/logos/techs/SASS.astro";
import AstroIcon from "../../svg/logos/techs/Astro.astro";
import Nodejs from "../../svg/logos/techs/Nodejs.astro";
import PHP from "../../svg/logos/techs/PHP.astro";
import MySQL from "../../svg/logos/techs/MySQL.astro";
import Laravel from "../../svg/logos/techs/Laravel.astro";
import CSharp from "../../svg/logos/techs/CSharp.astro";
import Git from "../../svg/logos/techs/Git.astro";
import Github from "../../svg/logos/techs/Github.astro";
import Gitlab from "../../svg/logos/techs/Gitlab.astro";
import Linux from "../../svg/logos/techs/Linux.astro";
import Trello from "../../svg/logos/techs/Trello.astro";
import Notion from "../../svg/logos/techs/Notion.astro";
import VSCode from "../../svg/logos/techs/VSCode.astro";
---

<section id="stack">
  <article>
    <h2>FrontEnd</h2>
    <ul>
      <li>
        <HTML />
      </li>
      <li>
        <CSS />
      </li>
      <li>
        <Javascript />
      </li>
      <li>
        <React />
      </li>
      <li>
        <Typescript />
      </li>
      <li>
        <Tailwind />
      </li>
      <li>
        <SASS />
      </li>
      <li>
        <AstroIcon />
      </li>
    </ul>
  </article>
  <article>
    <h2>BackEnd</h2>
    <ul>
      <li>
        <Nextjs />
      </li>
      <li>
        <PHP />
      </li>
      <li>
        <Nodejs />
      </li>
      <li>
        <MySQL />
      </li>
      <li>
        <Laravel />
      </li>
      <li>
        <CSharp />
      </li>
    </ul>
  </article>
  <article>
    <h2>DevOps</h2>
    <ul>
      <li>
        <Git />
      </li>
      <li>
        <Github />
      </li>
      <li>
        <Gitlab />
      </li>
      <li>
        <Linux />
      </li>
      <li>
        <Trello />
      </li>
      <li>
        <Notion />
      </li>
      <li>
        <VSCode />
      </li>
    </ul>
  </article>
</section>
<style>
  section {
    display: flex;
    flex-wrap: wrap;
    background: rgba(164, 159, 159, 0.3);
    border-radius: 16px;
    box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    border: 1px solid rgba(164, 159, 159, 0.31);
    justify-content: space-evenly;
    border-radius: 1.375rem;
    margin: 10rem 0 12.5rem;
    padding: 4rem 0;
    gap: 4rem 2rem;
    margin-bottom: 20rem;
    > article {
      min-width: 15rem;
      display: flex;
      flex-direction: column;
      flex: 1;
      gap: 1rem;
      > h2 {
        width: 100%;
        font-weight: 500;
        font-size: 2.5rem;
        text-align: center;
        margin-bottom: 1rem;
        user-select: none;
      }
      > ul {
        display: flex;
        flex-wrap: wrap;
        max-width: 15rem;
        margin: 0 auto;
        justify-content: center;
        align-items: center;
        gap: 2rem;
        > li {
          width: 3.5rem;
          height: 3.5rem;
          cursor: pointer;
          transition: transform 0.2s ease-in-out;
          &:hover {
            transform: scale(1.2);
          }
        }
      }
    }
  }
</style>
