---
import SubTitle from "../../components/text/SubTitle.astro";
import HTML from "../../svg/logos/techs/HTML.astro";
import CSS from "../../svg/logos/techs/CSS.astro";
import Javascript from "../../svg/logos/techs/Javascript.astro";
import React from "../../svg/logos/techs/React.astro";
import Nextjs from "../../svg/logos/techs/Nextjs.astro";
import Typescript from "../../svg/logos/techs/Typescript.astro";
import Tailwind from "../../svg/logos/techs/Tailwind.astro";
import SASS from "../../svg/logos/techs/SASS.astro";
import AstroIcon from "../../svg/logos/techs/Astro.astro";
import Nodejs from "../../svg/logos/techs/Nodejs.astro";
import PHP from "../../svg/logos/techs/PHP.astro";
import MySQL from "../../svg/logos/techs/MySQL.astro";
import Laravel from "../../svg/logos/techs/Laravel.astro";
import CSharp from "../../svg/logos/techs/CSharp.astro";
import Git from "../../svg/logos/techs/Git.astro";
import Github from "../../svg/logos/techs/Github.astro";
import Gitlab from "../../svg/logos/techs/Gitlab.astro";
import Linux from "../../svg/logos/techs/Linux.astro";
import Trello from "../../svg/logos/techs/Trello.astro";
import Notion from "../../svg/logos/techs/Notion.astro";
import VSCode from "../../svg/logos/techs/VSCode.astro";
---

<section id="stack">
  <article>
    <SubTitle>FrontEnd</SubTitle>
    <ul>
      <li>
        <HTML />
      </li>
      <li>
        <CSS />
      </li>
      <li>
        <Javascript />
      </li>
      <li>
        <React />
      </li>
      <li>
        <Typescript />
      </li>
      <li>
        <Tailwind />
      </li>
      <li>
        <SASS />
      </li>
      <li>
        <AstroIcon />
      </li>
    </ul>
  </article>
  <article>
    <SubTitle>BackEnd</SubTitle>
    <ul>
      <li>
        <Nextjs />
      </li>
      <li>
        <PHP />
      </li>
      <li>
        <Nodejs />
      </li>
      <li>
        <MySQL />
      </li>
      <li>
        <Laravel />
      </li>
      <li>
        <CSharp />
      </li>
    </ul>
  </article>
  <article>
    <SubTitle>DevOps</SubTitle>
    <ul>
      <li>
        <Git />
      </li>
      <li>
        <Github />
      </li>
      <li>
        <Gitlab />
      </li>
      <li>
        <Linux />
      </li>
      <li>
        <Trello />
      </li>
      <li>
        <Notion />
      </li>
      <li>
        <VSCode />
      </li>
    </ul>
  </article>
</section>
<style>
  section {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 2rem;
    > article {
      min-width: 15rem;
      display: flex;
      align-items: center;
      flex-direction: column;
      gap: 1rem;
      > h2{
        font-size: 2.3rem;
        color: var(--primary);
      }
      > ul {
        max-width: 15rem;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 2rem;
        > li {
          width: 3.2rem;
          height: 3.2rem;
          cursor: pointer;
          transition: transform 0.2s ease-in-out;
          &:hover {
            transform: scale(1.2);
          }
        }
      }
    }
  }
</style>
