---
import Layout from '../components/layouts/base.astro'
import MountainLeft from '../assets/svg/draws/MountainLeft.astro'
import MountainRight from '../assets/svg/draws/MountainRight.astro'
import Bird1 from '../assets/svg/draws/Bird-1.astro'
import Bird2 from '../assets/svg/draws/Bird-2.astro'
import Bird3 from '../assets/svg/draws/Bird-3.astro'
import Sun from '../assets/svg/draws/Sun.astro'
import Wave from '../assets/svg/draws/wave-1.astro'
---

<Layout>
  <header
    id="header"
    class="w-full min-h-screen flex justify-center items-center relative"
    aria-label="Header Illustration"
  >
    <figure
      class="w-full h-full flex items-end -z-50 bg-primary absolute bottom-0"
    >
      <Wave class="w-full" aria-label="wave" />
      <figcaption class="sr-only fixed">Background Wave</figcaption>
    </figure>
    <article
      class="w-2/3 text-center select-none text-white pointer-events-none z-40 py-20"
    >
      <h2
        class="text-5xl md:text-6xl lg:text-7xl xl:text-8xl mb-20 font-AlfaSlabOne !leading-normal"
      >
        Páginas unicas con diseños increibles
      </h2>
      <h1
        class="text-2xl md:text-3xl lg:text-4xl xl:text-5xl font-ZillaSlabHighlight"
      >
        Jorge Peñaranda | Desarrollador web
      </h1>
    </article>
    <figure class="w-full h-full absolute bottom-0 z-30">
      <MountainLeft
        aria-label="Left mountain"
        class="w-2/5 h-fit absolute bottom-0 left-0"
      />
      <MountainRight
        aria-label="Right mountain"
        class="w-2/5 h-fit absolute bottom-0 right-0"
      />
      <figcaption class="sr-only">Mountains</figcaption>
    </figure>
    <figure class="hidden md:inline z-20">
      <Bird1 aria-label="Bird 1" class="absolute top-[23%] left-[21%]" />
      <Bird2 aria-label="Bird 2" class="absolute bottom-[17%] right-[45%]" />
      <Bird3 aria-label="Bird 3" class="absolute top-[20%] right-[35%]" />
      <figcaption class="sr-only">Birds</figcaption>
    </figure>
    <figure class="hidden md:inline z-10">
      <Sun aria-label="sun" class="absolute top-[5%] right-[10%]" />
      <figcaption class="sr-only">Sun</figcaption>
    </figure>
  </header>
</Layout>
