---
import { ChevronLeft } from 'lucide-react'
import { CatAsAService } from '../components/atoms/cat'
import Layout from '../components/layouts/base.astro'
---

<Layout title="Not found" description="Página no encontrada">
  <main
    class="flex flex-col px-52 py-24 gap-10 w-full h-full items-center justify-between lg:flex-row"
  >
    <section
      class="flex-1 flex justify-center flex-col text-black dark:text-white gap-2"
    >
      <h1 class="font-bold text-6xl">Página no encontrada</h1>
      <p class="text-3xl">La página que buscas no existe.</p>
      <a
        href="/"
        class="flex w-max items-center mt-64 hover:-ml-2 transition-all"
        aria-label="Go back to home"
      >
        <ChevronLeft className="w-9 h-9" />
        <p class="text-2xl font-semibold">Volver</p>
      </a>
    </section>
    <section class="flex-1">
      <h2 class="text-center mb-2">
        Pero aquí tienes un gato para que te sientas mejor
      </h2>
      <div class="w-auto h-96">
        <CatAsAService client:only="react" />
      </div>
    </section>
  </main>
</Layout>
