---
import Layout from "../../layouts/Layout.astro";
import { fetchProjects } from "../../services/services.ts";
import {type Project} from "../../types/index.ts";

const projects:[string, Project][] = fetchProjects();
---

<Layout
  title="Jorge Pe침aranda | Desarrollador Web"
  description="Apasionado desarrollador web con experiencia en la creaci칩n de herramientas de c칩digo abierto y soluciones web. Comprometido en aprender y crecer constantemente en este emocionante campo, y encantado de compartir mi conocimiento en el camino."
>
  <header>
    <h1>Jorge Pe침aranda</h1>
    <h2>Desarrollador Web</h2>
  </header>
  <aside>
    <h1 id="projects">Proyectos</h1>
    <ul>
      <li>FrontEnd</li>
      <li>BackEnd</li>
      <li>Fullstack</li>
    </ul>
  </aside>
  <section>
    {
      projects.map((project) => (
        <article>
          <a href={`/projects/${project[0]}`} aria-label={`Conocer ${project[0]}`}>
            <img src={project[1].iconURL} alt={project[0]} transition:name={`${project[0]} icon project`}>
          </a>
        </article>
      ))
    }
  </section>
</Layout>
<style>
  header{
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    height: calc(75vh - var(--nav-height));
    background-image: url("/assets/img/projects-files/background-header.webp");
    background-attachment: fixed;
    object-fit: cover;
    position: relative;
    > h1, h2{
      z-index: 5;
      color: var(--primary-light);
      user-select: none;
    }
    > h1{
      font-size: 6.5rem;
      font-weight: 800;
      line-height: 1;
    }
    > h2{
      font-size: 3rem;
      font-weight: 600;
      line-height: 1;
    }
    &::before{
      content: "";
      position: absolute;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.36);
      border-radius: 16px;
      box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
      backdrop-filter: blur(4.2px);
      -webkit-backdrop-filter: blur(4.2px);
      border: 1px solid rgba(0, 0, 0, 0.31);
    }
  }
  aside{
    user-select: none;
    > h1{
      font-size: 3rem;
      font-weight: 600;
      text-align: center;
      margin-bottom: 2rem;
    }
    > ul{
      display: flex;
      gap: 2rem;
      width: 30rem;
      margin: 0 auto;
      justify-content: space-evenly;
      > li{
        padding: .5rem .7rem;
        border-radius: .8rem;
        font-size: 1.6rem;
        line-height: 1;
        filter: brightness(0.8);
        cursor: pointer;
        transition: background-color .2s ease-in-out;
        &#active{
          outline: 1px solid black;
        }
        &:hover{
          background-color: rgba(212, 212, 212, 0.473);
        }
      }
    }
  }
  section{
    display: grid;
    grid-template-columns: repeat(4, minmax(10rem, 1fr));
    grid-template-rows: repeat(auto-fit, minmax(10rem, auto));
    gap: 2rem;
    padding-bottom: 4rem;
    > article{
      > a {
        > img{
          width: 100%;
          border-radius: 2.6rem;
          object-fit: cover;
          aspect-ratio: 1 / 1;
        }
      }
      transition: transform .2s ease-in-out;
      &:hover{
        transform: scale(1.05);
      }
    }
  }
  /* Screen "MD" */
  @media (min-width: 768px) {
    aside{
      margin: 4rem calc(var(--x-padding) + 15rem);
    }
    section{
      margin: 0 calc(var(--x-padding) + 15rem);
    }
  }
</style>
