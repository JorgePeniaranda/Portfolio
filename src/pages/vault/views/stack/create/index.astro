---
import Layout from '@/components/template/base.astro';
import { DashboardLayout } from '@/components/template/dashboard-layout';
import { CreateStackForm } from '@/components/organisms/form/create/stack';
import { DASHBOARD_BREADCRUMB_TEMPLATE } from '@/constants/dashboard-breadcrumb';
---

<Layout title='Crear stack'>
  <DashboardLayout
    client:load
    breadcrumb={DASHBOARD_BREADCRUMB_TEMPLATE['/vault/views/stack/create']}
  >
    <main class='container mx-auto flex size-full flex-col gap-5 pt-7 pl-7'>
      <h1 class='text-4xl font-medium'>Crear Stack</h1>
      <CreateStackForm client:load />
    </main>
  </DashboardLayout>
</Layout>
