---
import type { AvailableLanguages } from '@/types/translation';

import { langStore } from '@/services/storage/lang';

interface Props {
  lang: AvailableLanguages;
}

const { lang } = Astro.props;

langStore.set(lang); // Update the language store in the server side
---

<script>
  import { langStore } from '@/services/storage/lang';
  import type { AvailableLanguages } from '@/types/translation';

  // Update the language store in the client side
  langStore.set(document.documentElement.lang as AvailableLanguages);
</script>
