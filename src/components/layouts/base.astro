---
import { SEO } from 'astro-seo'
import { ViewTransitions } from 'astro:transitions'
import { DEFAULT_LANG } from '../../constants/common'
import { NAVBAR_ITEMS } from '../../constants/navbar'
import { SEO_INFO } from '../../constants/seo'
import { formatClassNames } from '../../helpers/class-names'
import '../../styles/global.css'
import '../../styles/globals.css'
import ThemePreference from '../atoms/theme-preference.astro'
import { Navbar } from '../organisms/navbar'

interface Props {
  title?: string
  description?: string
  lang?: string
  body?: astroHTML.JSX.HTMLAttributes
  html?: astroHTML.JSX.HtmlHTMLAttributes
}

const { title, description, lang = DEFAULT_LANG, body, html } = Astro.props
---

    <!DOCTYPE html>
    <html lang={lang} {...html}>
  <head>
    <SEO {...SEO_INFO} title={title} description={description ?? SEO_INFO.description} />
    <ViewTransitions />
    <ThemePreference />
  </head>
  <body
    class={formatClassNames('w-screen h-screen antialiased', body?.class)}
    {...body}
  >
    <Navbar items={NAVBAR_ITEMS} client:idle />
    <slot />
  </body>
</html>
