import CSharp from '../../svg/CSharp.astro'
import Git from '../../svg/Git.astro'
import Github from '../../svg/Github.astro'
import Gitlab from '../../svg/Gitlab.astro'
import Linux from '../../svg/Linux.astro'
import Trello from '../../svg/Trello.astro'
import Notion from '../../svg/Notion.astro'
import VSCode from '../../svg/VSCode.astro'
---

<section>
    <article>
        <h2>FrontEnd</h2>
        <ul>
            <li>
              <HTML/>
            </li>
            <li>
              <CSS/>
            </li>
            <li>
              <Javascript/>
            </li>
            <li>
              <React/>
            </li>
            <li>
              <Nextjs/>
            </li>
            <li>
              <Typescript/>
            </li>
            <li>
              <Tailwind/>
            </li>
            <li>
              <SASS/>
            </li>
            <li>
              <AstroIcon/>
            </li>
        </ul>
    </article>
    <article>
        <h2>BackEnd</h2>
        <ul>
            <li>
              <Nodejs/>
            </li>
            <li>
              <PHP/>
            </li>
            <li>
              <MySQL/>
            </li>
            <li>
              <Laravel/>
            </li>
            <li>
              <CSharp/>
            </li>
        </ul>
    </article>
    <article>
        <h2>DevOps</h2>
        <ul>
            <li>
              <Git/>
            </li>
            <li>
              <Github/>
            </li>
            <li>
