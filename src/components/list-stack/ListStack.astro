}

#ListStack article ul {
  display: flex;
  flex-wrap: wrap;
  max-width: 15rem;
  margin: 0 auto;
  justify-content: center;
  align-items: center;
  gap: 2rem;
}

#ListStack article ul li {
  font-size: 3.5rem;
  cursor: pointer;
  transition: transform 0.2s ease-in-out;
}

#ListStack article ul li:hover {
  transform: scale(1.2);
}
