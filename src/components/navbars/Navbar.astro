---
import Logo from "../../svg/Logo.astro";
---

<nav>
  <a href="/" aria-label="Go Home">
    <Logo />
  </a>
  <div class="flex items-center justify-center cursor-pointer">es</div>
</nav>
<style>
  nav {
    width: 100%;
    height: var(--nav-height);
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 0 1rem;
    > a {
      height: calc(var(--nav-height) - 1rem);
      &:hover {
        transform: scale(1.1);
      }
    }
  }

  /* Screen "MD" */
  @media (min-width: 768px) {
    nav {
      padding: 0 var(--x-padding);
      justify-content: space-between;
    }
  }
</style>
