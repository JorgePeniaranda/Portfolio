---
import Logo from "../../svg/Logo.astro";

interface Props{
  color?: string;
}
const { color } = Astro.props;
---

<nav style={`color: ${color};`}>
  <ul>
    <li>
      <a href="/">Acerca</a>
    </li>
    <li>
      <a href="/">Proyectos</a>
    </li>
    <li id="logo">
      <Logo />
    </li>
    <li>
      <a href="/">Blog</a>
    </li>
    <li>
      <a href="/">Contacto</a>
    </li>
  </ul>
</nav>
<style>
  nav {
    width: 100%;
    height: var(--nav-height);
    position: absolute;
    z-index: 100;
    padding: 0 1rem;
    > ul{
      display: flex;
      justify-content: center;
      gap: 4rem;
      align-items: center;
      height: 100%;
      > li{
        font-size: 1.5rem;
        user-select: none;
      }
      > li#logo{
        width: 10rem;
        height: 10rem;
      }
    }
  }

  /* Screen "MD" */
  @media (min-width: 768px) {
    nav {
      justify-content: space-around;
    }
  }
</style>
