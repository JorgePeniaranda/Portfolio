---
import { ViewTransitions } from "astro:transitions";
import BaseHead from "../components/heads/BaseHead.astro";
import Navbar from "../components/navbar/index.astro";
import Footer from "../components/footer/index.astro";
interface Props {
  title: string;
  description: string;
  withNavbar?: boolean;
  footerColor?: string;
  footerBackgroundColor?: string;
}
const { title, description, withNavbar = true, footerColor, footerBackgroundColor } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <BaseHead title={title} description={description} />
    <ViewTransitions />
  </head>
  <body>
    { withNavbar && <Navbar />}
    <slot />
    <Footer color={footerColor} backgroundColor={footerBackgroundColor}/>
  </body>
</html>
